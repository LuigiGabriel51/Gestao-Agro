            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="2"
                BackgroundColor="{AppThemeBinding Light=Black,
                                                  Dark=White}"
                HorizontalOptions="Start"
                StrokeShape="RoundRectangle 20"
                VerticalOptions="Start">
                <StackLayout Padding="20" Spacing="10">
                    <Label
                        Padding="0,0,0,10"
