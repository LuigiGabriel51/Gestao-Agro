            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="1"
                BackgroundColor="{AppThemeBinding Light=Black,
                                                  Dark=White}"
                HorizontalOptions="Start"
                StrokeShape="RoundRectangle 20"
                VerticalOptions="Start">
                <StackLayout Padding="20" Spacing="10">
                    <Label
                        Padding="0,0,0,10"
                        FontFamily="poppinsb"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text=" ☀️ Integração com Clima "
                        TextColor="{AppThemeBinding Light=White,
                                                    Dark=Black}" />
                    <Label
                        Padding="20,10,20,10"
                        FontFamily="poppinsl"
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="- Alertas meteorológicos"
                        TextColor="{AppThemeBinding Light=White,
                                                    Dark=Black}" />
                    <Label
                        Padding="20,10,20,10"
                        FontFamily="poppinsl"
                        FontSize="14"
